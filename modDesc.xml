<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="80">
    <author>Dr4K4n</author>
    <version>1.0.0.0</version>
    <multilayer supported="true" />
    <title>
        <en>Ignition Lock Support</en>
        <de>Zündschloss Unterstützung</de>
    </title>

    <description>
        <en>Allows to add separate key bindings to start and stop the engine. This is especially useful when you want to use the FS25 collectors edition ignition lock.</en>
        <de>Ermöglicht das Hinzufügen separater Tastenkombinationen zum Starten und Stoppen des Motors. Dies ist insbesondere nützlich, wenn du das Zündschloss der FS25 Collectors Edition verwenden möchtest.</de>
    </description>

    <iconFilename>icon_ignitionLockSupport.png</iconFilename>

    <actions>
        <action name="ilsMotorStart" category="VEHICLE" axisType="HALF" />
        <action name="ilsMotorStop" category="VEHICLE" axisType="HALF" />
    </actions>

    <extraSourceFiles>
        <sourceFile filename="ignitionLockSupport.lua" />
    </extraSourceFiles>

    <l10n>
        <text name="input_ilsMotorStart">
            <en>start engine</en>
            <de>Motor starten</de>
        </text>
        <text name="input_ilsMotorStop">
            <en>stop engine</en>
            <de>Motor stoppen</de>
        </text>
    </l10n>
</modDesc>